@import '~vars'

.sliderPage__wrapper
  width 100%
  height 100vh
  background silver
  .slider-big_wrapper
    height 100vh
    width 100%
    display flex
    overflow hidden
    .bg-img
      height 100vh
      width 100%
      object-fit cover
      transition all ease 1500ms
  .slider-small__wrapper
    display flex
    justify-content center
    position absolute
    top:30%
    transform: translateX(-50%)
    left: 50%
    overflow hidden
    .slider-small-ul
      width 100%
      max-width 612px
      height 310px
      display flex
      align-items flex-end
      //transform translateX(0)
      transition 500ms
      .slider-small-item-li
        transform-origin: bottom;
        list-style none
        background mediumvioletred
        margin 0 30px
        padding 10px
        transition 1s
        .slider-small-item-description-container
          text-align center
          margin 10px 0
          .description-title
            font-size 13px
          .description-price
            font-size 13px
          .description-add-basket
            font-size 10px
        .slider-small-item-img-container-small
          height 120px
          width 110px
          background darkgoldenrod
          display flex
          flex-direction column
          transition 1s
          .slider-small-item-img
            height 85%
            width 100%
            object-fit contain
          .slider-small-item-img-go
            color white
        .slider-small-item-li-big
          height 200px
          width 150px
    .slider-small-buttons-prev
    .slider-small-buttons-next
      height 25px
      width 25px
      position absolute
      top 23%
      background url('../../../src/images/buttons/slider-small-item-li-big.png') no-repeat
      background-size cover
      background-position 100%
    .slider-small-buttons-prev
      left 0
      transform rotate(180deg)
    .slider-small-buttons-next
      right 0