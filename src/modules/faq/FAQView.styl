@import '~vars'

.faq-page-wrapper
  position absolute
  top 0
  display flex
  min-height 100%
  width 100%
  height 100%
  overflow hidden
  background-color #032e63
  background-image url('../../images/main-page/fon.jpg');
  background-size cover
  color #fff
  .faq-page-title
    color #d3741c
    font-size 32px
    font-family $Segoe
    text-align left
    margin 25px 0
    +tablet()
      font-size 30px
      margin 40px 0 20px 0
  .faq-page-content
    padding 75px 50px 50px 50px
    width calc(100% + 20px)
    box-sizing border-box
    position: absolute;
    height 100%
    overflow auto
    +tablet()
      width calc(100% + 20px)
      padding 20px 10px 20px 10px
    +mobile()
      width 100%
    .faq-expansion-last-panel
      margin-bottom 25px
    .faq-expansion-panel
      position relative
      transition margin 150ms cubic-bezier(0.4, 0, 0.2, 1)0ms
      background-color transparent
      color #fff
      margin 8px 0
      box-shadow none
      .faq-expansion-icon
      .faq-expansion-title-wrapper
        background-color #073976
        .faq-expansion-title
          font-family $Segoe
          color #fff
          font-size 20px
          text-align left
          +mobile()
            font-size 17px
        svg
          color #fff
      .faq-expansion-detail-wrapper
        padding 25px 50px 18px 25px
        +mobile()
          padding 10px 25px 0 10px
        .faq-expansion-detail
          font-family $Segoe
          color #fff
          text-align left
          font-size 16px
          +mobile()
            font-size 14px
