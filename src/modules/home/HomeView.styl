@import '~vars'

#home-page-elephant-wrapper
  .elephant-content
    +tablet()
      box-sizing: border-box;
      align-self: center;
      position: absolute;
      left: 0;
      width: calc(50% + 20px);
      height: 100%;
      min-height: 100%;
      margin-left: 50%;
      text-align: left;
      z-index: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      top 0
    +mobile()
      top: 50%;
      margin-left: 0
      width: 100%;
      overflow: unset;
      padding: 0;
      text-align: center;
      min-height unset
      height unset
  .elephant-wrapper
    display flex
    flex-direction row
    .elephant-image-background-light
      +tablet()
        display block
        left 25%
        height 100%
      +mobile()
        left 50%
        height 400px
    .elephant-image-background-slon-big
      +tablet()
        display block
        left 25%
        height: 400px;
        transform: translate(-50%, -50%);
        top 50%
      +mobile()
        left 50%
        transform: translate(-50%, 30px);
        height 300px
        top 0
  .home-page-content-wrapper
    +mobile()
      overflow: unset;
    .timer-wrapper
      font-family $Segoe
    .timer-title
      font-size 18px
      +tablet()
        font-size 14px
      +mobile()
        margin-left 10%
    .timer-counter
      font-size 48px
      +tablet()
        font-size 34px
      +mobile()
        margin-left 10%
    .promo-text-title
      font-size 36px
      color #ee7501
      margin 70px 0 80px 0
      font-family $Segoe
      +laptop()
        margin 50px 0 65px 0
      +tablet()
        font-size 23px
        margin 60px 0 40px 0
      +mobile()
        margin 15px 0 40px 10%
    .offers-icon-block-wrapper
      +mobile()
        margin-left 10%
      .offer-icon-block
        display flex
        margin-bottom 20px
        font-family $Segoe
        height 50px
        +tablet()
          height 40px
        img
          width 50px
          height 40px
          margin-right 30px
          +tablet()
            width 35px
            height 30px
            margin-right 10px
        div
          height 40px
          font-size 18px
          +tablet()
            font-size 14px
            height 24px
    .vote-button-wrapper
      margin 40px 0
      +mobile()
        text-align center
      .vote-button
        width 145px
        border 1px solid #fff
        background-color #032e63
        color #fff
        border-radius 20px
        box-shadow 2.331px 1.888px 10px 0 rgba(23, 106, 191, 0.35)
        +tablet()
          width 132px
          height 30px
          font-size 14px
      :hover
        background-color #d5d5d5

  .home-page-content-wrapper
    .home-page-content-alternative
      .promo-text-title
        font-size 36px
        color #ee7501
        font-family $Segoe
        +tablet()
          font-size 34px
      .thank-you-text
        font-family $Segoe
        font-size 24px
        margin-bottom 55px
        +tablet()
          font-size 18px
        +mobile()
          margin 0 0 40px 10%
      .description-text
        padding-right 20%
        font-family $Segoe
        font-size 18px
        +tablet()
          font-size 16px
        +mobile()
          padding 0 5% 5% 10%

@media (min-width: 1600px)
  .home-page-wrapper
    .home-page-image-background-slon-big
      left 15%
      transition: all 1s ease;

@media (min-width: 600px) and (max-width: 700px)
  .home-page-wrapper .home-page-image-background-slon-big
    left 2%