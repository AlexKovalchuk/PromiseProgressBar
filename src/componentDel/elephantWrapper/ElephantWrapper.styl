@import '~vars'

.elephant-wrapper
  position absolute
  overflow hidden
  top 0
  width 100%
  height 100%
  background-color #032e63
  background-image url('../../images/main-page/fon.jpg');
  background-position center
  background-size cover
  color: #fff
  .elephant-wrapper-scroll
    +tablet()
      width 100%
      height 100%
      overflow-x: hidden;
      overflow-y: auto;
      position absolute
      margin 0
      padding 0 20px
    +mobile()
      padding 0

  .elephant-image-background-slon-big
    padding-top  75px
    box-sizing border-box
    max-height 550px
    max-width 500px
    height 100%
    width auto
    align-self center
    left 25%
    top 50%
    transform translate(-50%, -50%)
    position absolute
    transition: all 1s ease
    pointer-events none
    +laptop()
      height 450px
    +tablet()
      height  300px
      left 50%
      top 0
      transform translate(-50%, 30px)
    +mobile()
      display none

  .elephant-image-background-light
    height 100%
    top 0
    left 25%
    transform translateX(-50%)
    position absolute
    pointer-events none
    +tablet()
      height 400px
      left 50%
    +mobile()
      display none

  +tablet()
    height 100%
    min-height 100%
  .elephant-content
    box-sizing border-box
    align-self center
    position absolute
    left 0
    width calc(50% + 20px)
    height 100%
    min-height 100%
    margin-left 50%
    text-align left
    z-index 1
    display flex
    flex-direction column
    justify-content center
    & > div
      overflow-y auto
      padding-top 75px
      +tablet()
        text-align left
    +tablet()
      width 100%
      margin 0
      height auto
      position absolute
      min-height auto
      top 300px
    +mobile()
      position absolute
      width 100%
      margin 0
      padding 0 20px
      text-align center
      top 0
