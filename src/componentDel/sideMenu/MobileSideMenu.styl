@import '~vars'

.mobile-side-menu-wrapper
  width 100%
  height 100%
  position absolute
  z-index 10
  background-color rgba(12, 8, 3, 0.84)
  display none
  +tablet()
    display block
  .side-menu
    +tablet()
      display flex
  .mobile-side-menu
    overflow auto
    .close-menu
      position absolute
      top 20px
      right 20px
      fill white
    +tablet()
      width 45%
      height 100%
      position absolute
      background-color #111e3e
      z-index 1
      color #fff
      //box-shadow: 7px 0 10px 0 rgba(191,242,255, .15);
      .elephant-block
        height 100px
        border-bottom 2px solid rgba(255, 255, 255, 0.2)
        img
          margin-top 20px
          height 60px
          width 60px
      .links-block
        padding 20px 0 15px 15px
        .links-block-item
          display flex
          color #fff
          margin-bottom 10px
          font-size 14px
    +mobile()
      width 100%
  .close-menu-block
    height 100%
    +tablet()
      55%
      margin-left 45%
    +mobile()
      width 20%
      margin-left 80%