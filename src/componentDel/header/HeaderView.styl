@import '~vars'
.header-wrapper
  z-index 9
  position fixed
  top 0
  width 100%
  .header
    display block
    width 100%
    z-index 7
    .app-bar
      background-color rgba(3, 25, 65, 0.75)
      width 100%
      height 70px
      .tool-bar
        display flex
        justify-content space-between
        .topMenu
          height 70px
          display flex
          justify-content flex-start
          list-style none
          margin 0
          padding 0
          .topMenu-item
            height 65px
            margin-right 30px
            text-align center
            color #ffffff
            line-height 60px
            align-self center
            +laptop-small()
              font-size 0.8em
            img
              height 60px
              cursor pointer
            span
              text-transform uppercase
              cursor pointer
              &:hover
                color #9f5223
          .topMenu-silpoElephant
            width 60px
            height 60px
            margin-right 70px
          .exit-icon-wrapper
            .exit-icon
              width 30px
              height 60px

.header-wrapper
  .header-mobile
    display none
    height 45px
    width 100%
    .app-bar-mobile
      background-color rgba(3, 25, 65, 0.75)
      height 45px
      .tool-bar-mobile
        height 45px
        min-height 45px
        .topMenu-silpoElephant-mobile
          width 100%
          +mobile()
            padding-right 10%
          +tablet()
            padding-right 7%
          img
            width 40px
            height 40px

.header-wrapper
  +tablet()
    .header-mobile
      display block
    .header
      display none