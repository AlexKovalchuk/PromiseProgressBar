@import '~vars'
//scale-ratio-ratio = 1
.product-list-wrapper-scroll-hidden
  width 100%
  overflow hidden
  height 100%
.product-list-wrapper
  width 100%
  height 100%
  overflow hidden
.product-list
  width calc(100% + 20px)
  height 100%
  overflow auto
  background-repeat no-repeat
  background-size cover
  background-position center
  h1, h3
    color white
  .product-list-title.red
    & > p
      color red
    &:before, &:after
      background-color red
  .product-list-title
    & > p
      font-weight 300
      font-size 28px
      font-family $Segoe
      text-transform uppercase
      color white
    position relative
    display inline-block
    margin-top 30px
    margin-bottom 6px
    +mobile()
      max-width 80%
      & > p
        font-size 20px
    &:before
      content ''
      background-color white
      width 40px
      height 1px
      position absolute
      top: 50%
      left 0
      transform translate(calc((100% + 10px) *(-1) ), 0)
      +mobile()
        width: 35px;
    &:after
      content ''
      background-color white
      width 40px
      height 1px
      position absolute
      top: 50%
      right  0
      transform translate(calc((100% + 10px)), 0)
      +mobile()
        width 35px
  .product-list-description
    font-weight 300
    font-size 16px
    +mobile()
      width 90%
      margin 0 auto
      font-size 14px
      text-transform uppercase
.product-list-holder
  width 100%
  //height 60%
  display flex
  align-items center
    overflow-y: auto;
    +mobile()
      align-items normal
      height: 100%;
  .product-list
    width 100%
    display flex
    list-style-type none
    flex-wrap wrap
    justify-content space-evenly

    .item
      position relative
      margin 25px 0 20px 0
      width 200px
      scale-ratio(width, 200px)
      transition opacity 0.3s ease-in-out
      .item-container
        &:hover
          .item-img
            filter: drop-shadow(0 0 6px rgba(61,255,255,0.36));

        .place
          scale-ratio(width , 40px)
          scale-ratio(height , 40px)
          background-size contain
          position absolute
          top 0
          right 0
          transform: translateX(-100%)
          &.place-1
            background-image url("../../images/vote-page/place-1.png")
          &.place-2
            background-image url("../../images/vote-page/place-2.png")
          &.place-3
            background-image url("../../images/vote-page/place-3.png")
        .item-img
          scale-ratio(height, 160px)
          filter: none
          transition filter 0.3s ease-in-out
        & > p
          color white
          scale-ratio(font-size, 14px)
          scale-ratio(width, 150px)
          scale-ratio(height, 45px)
          margin 6px auto 12px auto
        .button-vote
          margin 0 auto
          scale-ratio(width, 140px)
          scale-ratio(height, 35px)
          display flex
          align-items center
          justify-content center
          scale-ratio(border-radius, 50px)
          border 1px solid white
          text-transform uppercase
          color white
          scale-ratio(font-size, 12px)
          transition color ease-in-out 0.3s, background-color ease-in-out 0.3s
          &:hover
            background-color white
            color $menu-color
            cursor pointer
        .button-voted
          scale-ratio(width, 140px)
          margin 0 auto
          p
            scale-ratio(font-size, 10px)
            color white
            margin 6px 0
          .scale-voted
            width 100%
            scale-ratio(height, 10px)
            border solid white 1px
            scale-ratio(border-radius, 10px)
            position relative
            &::before
              content''
              width 100%
              height 100%
              position absolute
              top 0
              left 0
              border solid white 1px
              scale-ratio(border-radius, 10px)
              filter blur(2px)
              transform translateY(-1px)
            .scale-percent
              scale-ratio(height, 10px)
              scale-ratio(border-radius, 10px)
              background-color #2ea8c0
      .item-container.unActive
        pointer-events none
        opacity 0.5
      .item-container.noGlowing
        pointer-events none